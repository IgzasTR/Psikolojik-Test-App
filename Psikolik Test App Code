import tkinter as tk
from tkinter import ttk, messagebox


class WellbeingTrackerApp:
    def __init__(self, master):
        self.master = master
        master.title("Psikolojik Durum Testi")

        # Pencere boyutlarÄ±nÄ± ayarla
        master.geometry("850x800")  # GeniÅŸlik x YÃ¼kseklik

        # BarlarÄ±n Ã§eÅŸitliliÄŸini artÄ±r
        self.bars = {
            'Sosyallik': 50,
            'Yeme & Ä°Ã§me': 50,
            'Temizlik': 50,
            'Uyku': 50,
            'Egzersiz': 50,
            'Zihin': 50,
            'Finans': 50,
            'EÄŸlence': 50,
            'Kariyer': 50,
            'Ä°liÅŸkiler': 50,
            'Hedefler': 50,
            'YaratÄ±cÄ±lÄ±k': 50,
            'Seyahat': 50,
            'DoÄŸa': 50,
            'Teknoloji': 50,
            'GÃ¶nÃ¼llÃ¼lÃ¼k': 50,
            'Ruhsal': 50,
            'Ä°lgi AlanlarÄ±': 50,
            'Zaman YÃ¶netimi': 50,
            'Hobiler': 50,
            'Kendine Zaman': 50,
            'Aile Ä°liÅŸkileri': 50,
            'KiÅŸisel GeliÅŸim': 50,
            'Meditasyon': 50,
            'MÃ¼zik': 50,
            'Spor': 50,
            'Kitap Okuma': 50,
            'Sanat': 50
        }

        self.canvas_items = {}
        self.value_labels = {}
        self.emojis = {}

        # Ana Ã§erÃ§eve ve kaydÄ±rÄ±cÄ± Ã§erÃ§eve
        self.main_frame = ttk.Frame(self.master)
        self.main_frame.pack(fill='both', expand=True)

        # KaydÄ±rma Ã§ubuÄŸu
        self.canvas = tk.Canvas(self.main_frame)
        self.scrollbar = ttk.Scrollbar(self.main_frame, orient="vertical", command=self.canvas.yview)
        self.scrollable_frame = ttk.Frame(self.canvas)

        self.scrollable_frame.bind(
            "<Configure>",
            lambda e: self.canvas.configure(scrollregion=self.canvas.bbox("all"))
        )

        self.canvas.create_window((0, 0), window=self.scrollable_frame, anchor="nw")
        self.canvas.configure(yscrollcommand=self.scrollbar.set)

        self.canvas.pack(side="left", fill="both", expand=True)
        self.scrollbar.pack(side="right", fill="y")

        self.create_widgets()

    def create_widgets(self):
        for bar in self.bars:
            frame = ttk.Frame(self.scrollable_frame)
            frame.pack(padx=10, pady=5, fill='x')

            label = ttk.Label(frame, text=bar, width=20, anchor='w')
            label.pack(side='left', padx=(0, 10))

            # Canvas kullanarak bar oluÅŸtur
            canvas = tk.Canvas(frame, width=300, height=30)
            canvas.pack(side='left', fill='x', expand=True)

            # Bar iÃ§in dikdÃ¶rtgen oluÅŸtur
            rect_id = canvas.create_rectangle(5, 5, 5, 25, fill="green", outline="", width=0)
            self.canvas_items[bar] = (canvas, rect_id)

            emoji_label = ttk.Label(frame, text=self.get_emoji(self.bars[bar]), font=("Arial", 14))
            emoji_label.pack(side='left', padx=(10, 0))
            self.emojis[bar] = emoji_label

            value_label = ttk.Label(frame, text=str(self.bars[bar]), width=5, anchor='e')
            value_label.pack(side='left', padx=(10, 0))
            self.value_labels[bar] = value_label

            # KaydÄ±rÄ±cÄ±
            scale = ttk.Scale(frame, from_=0, to=100, orient='horizontal',
                              command=lambda val, b=bar: self.update_bar(b, val))
            scale.set(self.bars[bar])
            scale.pack(side='left', fill='x', expand=True, padx=(10, 0))

            # YukarÄ± ve aÅŸaÄŸÄ± butonlarÄ± ekle
            up_button = ttk.Button(frame, text="â†‘", command=lambda b=bar: self.increment_value(b, 5))
            up_button.pack(side='left', padx=(5, 0))

            down_button = ttk.Button(frame, text="â†“", command=lambda b=bar: self.increment_value(b, -5))
            down_button.pack(side='left', padx=(5, 0))

            self.update_bar(bar, self.bars[bar])  # BaÅŸlangÄ±Ã§ deÄŸerini ayarla

        self.submit_button = ttk.Button(self.scrollable_frame, text="SonuÃ§landÄ±r", command=self.calculate_average)
        self.submit_button.pack(pady=10)

    def increment_value(self, bar_name, increment):
        new_value = max(0, min(100, self.bars[bar_name] + increment))
        self.update_bar(bar_name, new_value)

    def update_bar(self, bar_name, value):
        value = int(float(value))
        self.bars[bar_name] = value

        # BarÄ±n dolgusunu gÃ¼ncelle
        width = (value / 100) * 290  # Canvas geniÅŸliÄŸi (5px margin)
        canvas, rect_id = self.canvas_items[bar_name]

        # DÃ¶rtgenin koordinatlarÄ±nÄ± gÃ¼ncelle
        canvas.coords(rect_id, 5, 5, 5 + width, 25)

        self.value_labels[bar_name].config(text=str(value))  # DeÄŸeri gÃ¼ncelle
        self.emojis[bar_name].config(text=self.get_emoji(value))  # Emoji gÃ¼ncelle

    def get_emoji(self, value):
        if value > 70:
            return "ğŸ˜„"  # GÃ¼len emoji
        elif value >= 40:
            return "ğŸ˜"  # Normal bakan emoji
        else:
            return "ğŸ˜¢"  # ÃœzgÃ¼n emoji

    def calculate_average(self):
        average = sum(self.bars.values()) / len(self.bars)
        score = (average / 100) * 5

        # 50'nin altÄ±nda olan barlarÄ± listele ve tavsiyeler gÃ¶ster
        incomplete_items = [bar for bar, value in self.bars.items() if value < 50]
        recommendations = {
            'Sosyallik': "Sosyal aktivitelerinizi artÄ±rÄ±n.",
            'Yeme & Ä°Ã§me': "Daha saÄŸlÄ±klÄ± beslenmeye Ã¶zen gÃ¶sterin.",
            'Temizlik': "Temizlik alÄ±ÅŸkanlÄ±klarÄ±nÄ±zÄ± gÃ¶zden geÃ§irin.",
            'Uyku': "DÃ¼zenli uyku alÄ±ÅŸkanlÄ±klarÄ± geliÅŸtirin.",
            'Egzersiz': "Daha fazla fiziksel aktivite yapÄ±n.",
            'Zihin': "Zihinsel aktiviteleri artÄ±rÄ±n.",
            'Finans': "BÃ¼tÃ§enizi kontrol edin.",
            'EÄŸlence': "Daha fazla eÄŸlenceli aktivite yapÄ±n.",
            'Kariyer': "Kariyer hedeflerinizi gÃ¶zden geÃ§irin.",
            'Ä°liÅŸkiler': "Ä°liÅŸkilerinizi gÃ¼Ã§lendirin.",
            'Hedefler': "Hedeflerinizi netleÅŸtirin.",
            'YaratÄ±cÄ±lÄ±k': "YaratÄ±cÄ±lÄ±ÄŸÄ±nÄ±zÄ± geliÅŸtirin.",
            'Seyahat': "Yeni yerler keÅŸfetmek iÃ§in fÄ±rsatlar yaratÄ±n.",
            'DoÄŸa': "DoÄŸa yÃ¼rÃ¼yÃ¼ÅŸlerine Ã§Ä±kÄ±n.",
            'Teknoloji': "Teknolojiyi verimli kullanÄ±n.",
            'GÃ¶nÃ¼llÃ¼lÃ¼k': "GÃ¶nÃ¼llÃ¼ projelere katÄ±lÄ±n.",
            'Ruhsal': "Meditasyon veya yoga yapmayÄ± deneyin.",
            'Ä°lgi AlanlarÄ±': "Yeni ilgi alanlarÄ± keÅŸfedin.",
            'Zaman YÃ¶netimi': "Zaman yÃ¶netimi becerilerinizi geliÅŸtirin.",
            'Hobiler': "Yeni hobiler edinin.",
            'Kendine Zaman': "Kendinize zaman ayÄ±rmayÄ± unutmayÄ±n.",
            'Aile Ä°liÅŸkileri': "Aile Ã¼yelerinizle daha fazla zaman geÃ§irin.",
            'KiÅŸisel GeliÅŸim': "KiÅŸisel geliÅŸim kaynaklarÄ±na yÃ¶nelin.",
            'Meditasyon': "Meditasyon yapmayÄ± deneyin.",
            'MÃ¼zik': "MÃ¼zik dinleyerek rahatlayÄ±n.",
            'Spor': "Spor yapmayÄ± alÄ±ÅŸkanlÄ±k haline getirin.",
            'Kitap Okuma': "DÃ¼zenli olarak kitap okuyun.",
            'Sanat': "Sanat aktivitelerine katÄ±lÄ±n."
        }

        if incomplete_items:
            incomplete_list = "\n".join(incomplete_items)
            advice = "\n".join([recommendations[item] for item in incomplete_items])
            messagebox.showinfo("Eksik Maddeler", f"50'nin altÄ±nda olan barlar:\n{incomplete_list}\n\nTavsiyeler:\n{advice}")
        else:
            messagebox.showinfo("Puan", f"Ortalama Puan: {score:.2f}/5")


def main():
    root = tk.Tk()
    app = WellbeingTrackerApp(root)
    root.mainloop()


if __name__ == "__main__":
    main()

